Mouse_Button :: enum {
	Left,
	Right,
	Middle,
	X1,
	X2,
}

Window :: struct {
	pos: xm.Vec2i,
	size: xm.Vec2i,
}

Key_Event :: struct {
	key: Key,
}

Mouse_Button_Event :: struct {
	pos: xm.Vec2i,
	button: Mouse_Button,
}

Mouse_Scroll :: struct {
	scroll: xm.Vec2i,
}

Mouse_Move :: struct {
	pos: xm.Vec2i,
	delta: xm.Vec2i,
}

Quit :: struct {
	
}

Mouse_Button_Down :: distinct Mouse_Button_Event
Mouse_Button_Up :: distinct Mouse_Button_Event
